{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src/",
    "paths": {
      "@components/*": ["components/*"],
      "@containers/*": ["containers/*"],
      "@styles/*": ["styles/*"],
      "@pages/*": ["pages/*"],
      "@lib/*": ["lib/*"],
      "@graphql.d": ["graphql/generated.ts"],
      "@grpc.d": ["grpc/"],
      "@assets/*": ["../public/assets/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.ts",
    "src/lib/prototypes/string.js",
    "src/__mocks__/framerMotionMock.tss"
  ],
  "exclude": ["node_modules"]
}
